{
  "name": "michi-api-service",
  "version": "1.0.0",
  "description": "API webservice for michi",
  "author": "michiprotocol",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "build-api": "nest build michi-api-service",
    "start-api": "nest start michi-api-service",
    "start-api:dev": "nest start michi-api-service --watch",
    "start-api:debug": "nest start michi-api-service --debug --watch",
    "start-api:prod": "node dist/apps/michi-api-service/main",
    "build-processing": "nest build michi-processing-service",
    "start-processing": "nest start michi-processing-service",
    "start-processing:dev": "nest start michi-processing-service --watch",
    "start-processing:debug": "nest start michi-processing-service --debug --watch",
    "start-processing:prod": "node dist/apps/michi-processing-service/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "pretest:e2e": "ts-node ./scripts/setup-test-db.ts",
    "test:start-api:e2e": "dotenv -e .env.test -- jest --config ./apps/michi-api-service/test/jest-e2e.json",
    "test:start-api:debug": "dotenv -e .env.test -- node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --config ./apps/michi-api-service/test/jest-e2e.json"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch-logs": "^3.540.0",
    "@aws-sdk/client-s3": "^3.575.0",
    "@aws-sdk/credential-providers": "^3.576.0",
    "@moralisweb3/common-evm-utils": "^2.25.2",
    "@moralisweb3/core": "^2.7.4",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.3.8",
    "@nestjs/schedule": "^4.0.1",
    "@prisma/client": "^5.11.0",
    "@tokenbound/sdk": "^0.5.4",
    "axios": "^1.7.2",
    "bignumber.js": "^9.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.4.5",
    "ethereumjs-util": "^7.1.5",
    "ethers": "^6.11.1",
    "merkletreejs": "^0.4.0",
    "moralis": "^2.25.4",
    "nanoid": "^3.0.0",
    "nest-winston": "^1.9.4",
    "prisma": "^5.11.0",
    "reflect-metadata": "^0.2.2",
    "viem": "2.x",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@moralisweb3/streams-typings": "^1.0.7",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "jest-module-name-mapper": "^0.1.5",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.(spec|e2e-spec)\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/michi-common(|/.*)$": "<rootDir>/libs/michi-common/src/$1",
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@app/moralis(|/.*)$": "<rootDir>/libs/moralis/src/$1",
      "^@app/db(|/.*)$": "<rootDir>/libs/db/src/$1",
      "^@app/constants(|/.*)$": "<rootDir>/libs/constants/src/$1",
      "^@app/config(|/.*)$": "<rootDir>/libs/config/src/$1",
      "^@app/models(|/.*)$": "<rootDir>/libs/models/src/$1",
      "^@app/utils(|/.*)$": "<rootDir>/libs/utils/src/$1",
      "^@app/tokenbound(|/.*)$": "<rootDir>/libs/tokenbound/src/$1",
      "^@app/3pp(|/.*)$": "<rootDir>/libs/3pp/src/$1",
      "^@app/evm-reader(|/.*)$": "<rootDir>/libs/evm-reader/src/$1",
      "^@app/s3(|/.*)$": "<rootDir>/libs/s3/src/$1",
      "^y/event-handler(|/.*)$": "<rootDir>/libs/event-handler/src/$1"
    }
  }
}
